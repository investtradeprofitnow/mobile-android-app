<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="30dp"
    android:layout_margin="10dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_strategy_short_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="15dp"
            android:text="Strategy Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/iv_strategy_short_img"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_below="@+id/tv_strategy_short_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/tv_strategy_short_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15sp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/iv_strategy_short_img"
            android:text="Type: Positional"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_strategy_short_type"
            android:paddingHorizontal="15sp"
            android:layout_marginTop="20dp"
            android:text="Description of the Strategy:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_strategy_short_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="15sp"
            android:text="100% profitable strategy"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_centerInParent="true"
            android:text="Buy Now"
            android:layout_below="@id/tv_strategy_short_desc" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>